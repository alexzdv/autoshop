
<%=form_for @product, :url => admin_products_path do |pos| %>
    <div>
        <%= pos.label 'Company' %>
        <%#= pos.select 'company',@companies.map(&:name) %>
        <%= pos.select 'company_id',@companies.collect{|p| [p.name, p.id]} %>
        <%#= pos.select :member,:gym_id,Gym.find(:all).collect{|p| [p.name, p.id]}%>
    </div>

    <div>
        <%= pos.label 'Group' %>
        <%#= pos.select 'group',@groups.map(&:name) %>
        <%= pos.select 'group_id',@groups.collect{|p| [p.name, p.id]} %>
    </div>

    <div>
        <%= pos.label 'Title' %>
        <%= pos.text_field :title%>
    </div>

    <div>
        <%= pos.label 'Description' %>
        <%= pos.text_area :description%>
    </div>

    <%=pos.submit 'Add product'%>
<%end%>