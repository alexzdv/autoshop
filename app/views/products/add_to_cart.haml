
-items = $redis.hgetall(@authcookie)
-keys = $redis.hkeys(@authcookie)


-if keys.count>0
  -price=0
  %p В корзине :
  %table#cart_table
    %tr
      %th.off Товар
      %th.off Количество
      %th.off
      %th.off
      %th.off

    -keys.each do |key|
      - price=price+$redis.hget(key,'price').to_i();
      %tr
        %td.off
          =$redis.hget(key,'name')
        %td.off
          =items[key]
        %td.off
          =link_to_function "+","addToCart('#{key}','#{1}')"
        %td.off
          =link_to_function "-","addToCart('#{key}','#{-1}')"
        %td.off
          =link_to_function "x","deleteCartItem('#{key}')"

  %br
  %p Всего : #{price.to_s()}
  %br
  -if user_signed_in?
    -#= link_to 'Оформить заказ',new_order_path,:id=>'to_order'
    = link_to 'Оформить',accept_order_path(:id),:id=>'accept_order'
    = link_to 'Отменить',cancel_order_path(:id),:id=>'cancel_order'