= form_for @company, :url => @company.new_record? ? admin_panel_companies_path : admin_panel_company_path do |f|
  %p
    = f.label 'Производитель'
    = f.text_field 'name'
  %p
    =render :partial => 'admin_panel/shared/form', :locals => {:f => f}
  %p
    =render :partial => 'admin_panel/shared/images', :locals => {:target => @company, :target_link_ => "company"}
  %p
    = f.submit @company.new_record? ? 'Добавить' : 'Обновить'