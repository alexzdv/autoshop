= form_for @product, {:url => @product.new_record? ? admin_panel_products_path : admin_panel_product_path, :html => {:multipart => true} } do |f|

  .inlineDiv
    %p
      = f.label 'Производитель'
      = f.select 'company_id', @companies.collect { |p| [p.name, p.id] }

    %p
      = f.label 'Категория'
      = f.select 'group_id', @groups.collect { |p| [p.name, p.id] }

    %p
      = f.label 'Наименование'
      = f.text_field :title

    %p
      = f.label 'Описание'
      = f.text_area :description

    %p
      %br
      = render :partial => 'admin_panel/shared/form',  :locals => {:f => f}
      %br
      %br

    %p
      = f.submit @product.new_record? ? 'Добавить' : 'Сохранить'