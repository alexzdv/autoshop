!!!
%html
  %head
    %title Авто портал
    = stylesheet_link_tag :application
    = stylesheet_link_tag :custom
    = javascript_include_tag :application
    = csrf_meta_tag
  %body
    #container
      #header
        %h1
          =link_to 'Авто портал', '/'

        #user-navigation
          %ul.wat-cf
            %li
              -#=link_to 'Профиль', edit_admin_registration_path
            %li
              =link_to 'Выход', destroy_admin_session_path, {:class=>"logout"}

        #main-navigation
          %ul.wat-cf
            %li
              =link_to 'Производители',admin_panel_companies_path
            %li
              =link_to 'Категории',admin_panel_groups_path
            %li
              =link_to 'Товары', admin_panel_products_path

            %li
              =link_to 'Администраторы', admin_panel_admins_path
            %li
              =link_to 'Пользователи', admin_panel_users_path

      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            .message{:class => "#{type}"}
              %p #{message}


        #main.content
          = yield
          #footer
            .block
              %p Copyright &copy; #{Time.now.year} Web App.

        #sidebar
          -#= yield :sidebar
